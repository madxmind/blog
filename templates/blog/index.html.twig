{% extends 'base.html.twig' %}

{% block title 'Home' %}

{% block body %}
	<h1>
		Blog
		<a href="{{ path('blog_create') }}">Publier un nouvelle article</a>
	</h1>
	{% for post in posts %}
		{{ post.title }}<br/>
		{{ post.publishedAt|date('d/m/Y') }}<br/>
		<img src="{{ asset(post.image) }}" alt="{{ post.title }}"><br/>
		<small>{{ post.comments|length ~ ' commentaires' }}</small><br/>
		<a href="{{ path('blog_read', { id: post.id }) }}">Voir la suite</a>
		|
		<a href="{{ path('blog_update', { id: post.id }) }}">Modifier</a>
		<hr/><br/>
	{% endfor %}
{% endblock %}
